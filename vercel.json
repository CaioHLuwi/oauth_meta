{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/oauth-callback-google.html", "dest": "/public/oauth-callback-google.html" },
    { "src": "/api/google/(.*)", "dest": "/api/google/$1" },
    { "src": "/api/meta/(.*)", "dest": "/api/meta/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}

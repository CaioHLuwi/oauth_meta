{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/auth/google", "dest": "/api/google/initiate" },
    { "src": "/api/auth/google/callback", "dest": "/api/google/callback" },
    { "src": "/api/auth/google/campaigns", "dest": "/api/google/campaigns" },
    { "src": "/api/auth/meta", "dest": "/api/meta/initiate" },
    { "src": "/api/auth/meta/callback", "dest": "/api/meta/callback" },
    { "src": "/api/auth/meta/campaigns", "dest": "/api/meta/campaigns" },
    { "src": "/api/auth/meta/ad-accounts", "dest": "/api/meta/ad-accounts" },
    { "src": "/api/auth/meta/test-token", "dest": "/api/meta/test-token" },
    { "src": "/api/auth/health", "dest": "/api/health" }
  ]
}
